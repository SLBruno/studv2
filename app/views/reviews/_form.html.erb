<%= form_for([@curso, @review]) do |f| %>
<%= f.text_field :star %> 
<%= f.text_field :comment %>

<%= f.hidden_field :curso_id, :value => @curso.id %>
<%= f.hidden_field :user_id, :value => current_user.id %>

<button class="btn btn-primary" style="color:black;">
    <%= f.submit %> 
</button>
<% end %> 