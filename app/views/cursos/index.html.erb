  <section id="index-courses">
    <div class="container">
      <!--<h1 style="text-align: center; margin-bottom: 40px; font-size: 3.5em;"> CURSOS </h1>-->
          <% @cursos.in_groups_of(4) do |group| %>
          <div class="row">
          <% group.each do |curso| %>
            <% if curso %>
              <div class="col-md-3 col-sm-6 col-xs-12 panel-padding">
                  <div class="panel panel-default index-panel">
                      <!--<%= image_tag(curso.icon, class:'circleimgindex center') %>-->
                    <%= link_to curso do %>
                    <h3 class="course-title"><%= curso.name %></h3>
                    <% end %>
                    <p class="index-course-content"><%= truncate(curso.content, :length => 110) %></p>
                    <hr>
                    <div class="row">
                      <div class="col-xs-6 center">
                        <b><%= curso.aulas.sum(:time)/60 %>h</b> de curso
                      </div>
                      <div class="col-xs-6 center">
                        <b><%= curso.users.count %></b> Inscritos
                      </div>
                    </div>
                    <%= button_to "ACESSE AGORA!", curso, class:"btn btn-highlight", method: :get %>
                  <% end %>
                  </div>
                </div>
            <% end %>
           </div>
          <% end %>
          </div>
      </div>
