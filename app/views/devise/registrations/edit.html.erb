
<div class="background">
  <div class="container">
    <h2 class="center" style="margin-top: 40px; margin-bottom: 40px;">Editar Informações da sua Conta </h2>

    <div style="width: 400px; margin: 0 auto;">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>

      <div class="input-group">
        <%= f.label :nome , class:"input-group-addon" %>
        <%= f.text_field :name, autofocus: true , class:"form-control" %>
      </div>
      <p></p>

      <div class="input-group">
        <%= f.label :email , class:"input-group-addon" %>
        <%= f.email_field :email, autofocus: true , class:"form-control" %>
      </div>
      <p></p>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="input-group">
        <%= f.label :senha , class:"input-group-addon" %>
        <%= f.password_field :password, autocomplete: "off" , class:"form-control" %>
      </div>
      <i>(deixe em branco se você não quiser alterá-la)</i>
      <p></p>

      <div class="input-group">
        <%= f.label :confirmação_de_senha , class:"input-group-addon" %>
        <%= f.password_field :password_confirmation, autocomplete: "off" , class:"form-control" %>
      </div>
      <p></p>

      <div class="input-group">
        <%= f.label :senha_atual , class:"input-group-addon" %>
        <%= f.password_field :current_password, autocomplete: "off" , class:"form-control" %>
      </div>
      <i>(nós precisamos de sua senha atual para confirmar as mudanças)</i>
      <p></p>

      <div class="actions">
        <%= f.submit "Atualizar Dados", class:"btn btn-highlight" %>
      </div>
    <% end %>
    <br />
    <br />
    <br />

    <p style="text-align: right;"><%= link_to "Cancelar a minha Conta", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %> | <%= link_to "Voltar", :back %></p>
    </div>
  </div>
</div>

    USER POINTS - <%= current_user.points %>
